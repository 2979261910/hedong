<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <!--申明一个名为“log4net“的自定义配置节,这样就可以获取log的环境-->
    <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
<connectionStrings>
    <!--一点要给添加加上名字，原因是如果有多个防止出错-->
    <add name="Constr" connectionString="Server=SKY-20191120BNR;Initial Catalog=StudentManager;Trusted_Connection=True;" />
    <!--添加访问数据库的字符串-->
  </connectionStrings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Memory" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.1.1" newVersion="4.0.1.1" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <log4net>
    <logger name="Info">
      <!--Info表示普通日志-->
      <level value="INFO" />
      <appender-ref ref="RollingLog" />
    </logger>
    <!--表示找到RollingLog-->
    <appender name="RollingLog" type="log4net.Appender.RollingFileAppender">
      <file value="Log\\Info\\"/>
      <appendToFile value="true" />
      <!--日志文件夹及文件名开头,文件名后面加上.log后缀，必须使用转义字符-->
      <DatePattern value="yyyy\\MM\\yyyy-MM-dd&quot;.log&quot;" />
      <staticLogFileName value="false" />
      <param name="MaxSizeRollBackups" value="100" />
      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明输出格式样例：2008-03-26 13:42:32,111 [10] INFO Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别： %-5level 描述：%message%logger%newline" />
      </layout>
    </appender>
    <logger name="Error">
      <!--Error表示错误日志-->
      <level value="ERROR"></level>
      <appender-ref ref="RollingError"></appender-ref>
    </logger>
    <appender name="RollingError" type="log4net.Appender.RollingFileAppender">
      <file value="Log\\Error\\"/>
      <appendToFile value="true" />
      <!--日志文件夹及文件名开头,文件名后面加上.log后缀，必须使用转义字符-->
      <DatePattern value="yyyy\\MM\\yyyy-MM-dd&quot;.log&quot;" />
      <staticLogFileName value="false" />
      <param name="MaxSizeRollBackups" value="100" />
      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明输出格式样例：2008-03-26 13:42:32,111 [10] INFO Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别： %-5level 描述：%message%logger%newline" />
      </layout>
    </appender>
    <root>
      <!--Windows事件日志
<appender-ref ref="EventLogAppender" />-->
    </root>
  </log4net>
</configuration>